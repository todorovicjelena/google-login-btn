{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "rootDir": "./",
    "typeRoots": ["custom-types", "node_modules/@types/"],
    "lib": ["es6", "dom", "es2017"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./"]
}
