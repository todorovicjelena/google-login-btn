{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2015",
    "jsx": "react",
    "rootDir": "./src",
    "typeRoots": ["custom-types", "node_modules/@types/"],
    "lib": ["es6", "dom", "es2017"],
    "declaration": true
  },
  "exclude": ["lib", "node_modules"],
  "include": ["./"]
}